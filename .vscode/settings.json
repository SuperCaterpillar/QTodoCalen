{
  "cmake.generator": "Ninja",
  "cmake.configureSettings": {
    "CMAKE_PREFIX_PATH": "D:/dev-env/Qt/6.8.3/msvc2022_64/lib/cmake"
  },
  "cmake.buildDirectory": "${workspaceFolder}/build",
  "cmake.sourceDirectory": "${workspaceFolder}",
  "cmake.installPrefix": "${workspaceFolder}/install",
  "cmake.configureOnOpen": true,

  // Qt 插件路径配置（如你装了 vscode-qt-tools）
  "qttools.qtInstallations": {
    "Qt6": "D:/dev-env/Qt/6.8.3"
  },
  "qttools.defaultQtInstallation": "Qt6",

  "C_Cpp.default.compileCommands": "${workspaceFolder}/build/debug/compile_commands.json",

  "clangd.arguments": [
    "--header-insertion=never",
    "--compile-commands-dir=build"
    // 不要加 --clang-tidy
  ],
  "C_Cpp.intelliSenseEngine": "disabled",
  "clangd.diagnostics.warnings": false
}
